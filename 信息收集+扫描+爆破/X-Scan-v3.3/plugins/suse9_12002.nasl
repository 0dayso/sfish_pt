 script_name(english: "SuSE9 Security Update:  Security update for Samba (12002)");
 script_set_attribute(attribute: "synopsis", value: 
"The remote SuSE9 system is missing the security patch 12002");
 script_set_attribute(attribute: "description", value: 'This update of Samba fixes a buffer overflow in function
send_mailslot() that allows to overwrite the stack with
zero-bytes. (CVE-2007-6015)
');
 script_set_attribute(attribute: "cvss_vector", value: "CVSS2#AV:N/AC:M/Au:N/C:C/I:C/A:C");
script_set_attribute(attribute: "solution", value: "Install the security patch 12002");
script_end_attributes();

script_cve_id("CVE-2007-6015");
script_summary(english: "Check for the security advisory #12002");
 
 script_category(ACT_GATHER_INFO);
 
 script_copyright(english:"This script is Copyright (C) 2009 Tenable Network Security");
 script_family(english: "SuSE Local Security Checks");
 script_dependencies("ssh_get_info.nasl");
 script_require_keys("Host/SuSE/rpm-list");
 exit(0);
}

